@page
@model paginaprueba1.app.vist_mascotaModel
@{
}
<br>
<br>
<section> 
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <div class="card">
          <div class="card-header bg-info text-center">
            <h1 style="color:white">AÑADIR MASCOTA</h1>
          </div>
          <div class="card-body  border border-info">
            <br>
            <form>
              <div class="form-group row">
                <label for="">Nombre Mascota</label>
                <input type="text" id="nombreMascota" placeholder="Nombre mascota" required>
              </div>
              <div class="form-group row">
                <label for="">Edad Mascota</label>
                <input type="number" id="edadMascota" placeholder="Edad mascota" required>
              </div><br>
              <div class="form-group row">
                <label for="">Tipo Mascota</label>
                <div class="form-check form-check-inline">
                  <!-- se agrega checkbox de Perro y Gato -->
                  <input class="form-check-input" type="radio" name="tipoMascota" id="opcPerro" value="perro">
                  <label class="form-check-label" for="inlineRadio1">Perro</label>
                </div>
                <div class="form-check form-check-inline">
                  <input class="form-check-input" type="radio" name="tipoMascota" id="opcGato" value="gato">
                  <label class="form-check-label" for="inlineRadio2">Gato</label>
                </div>
              </div><br><br>
              <div class="form-group row">
                <label for="">Raza Mascota</label>
                <input type="text" id="razaMascota" placeholder="Raza mascota" required>
              </div>
              <div class="form-group row">
                <input type="button" class="btn btn-primary" value="Añadir mascota" />
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>