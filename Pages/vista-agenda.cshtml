<section><br>
  <div class="container">
    <div class="col-md-6">
      <div class="card cita-form">
        <div class="card-header bg-primary text-center">
          <h1 style="color:white">AGENDAR CITA</h1>
        </div>
        <div class="card-body  border border-info">
          <form class="text-left ">
            <div class="form-group row justify-content-center"> 
              <label for="formGroupExampleInput2" class="col-sm-4 col-form-label" required>Nombre mascota</label> <br><br>
              <div class="col-sm-6">
                  <input type="text" class="form-control" id="nombres-mascota" placeholder="Nombre de la   mascota" required>
              </div> <br> <br>
              <div class="form-group row justify-content-center">                         
                <label for="nombre" class="col-sm-4 col-form-label"> Veterinario</label>
                <div class="col-6">
                  <div class="form-floating">
                    <select class="form-select" id="floatingSelectGrid">
                      <option selected>Seleccione veterinario</option>
                      <option value="1">Mironel Castellar T</option>
                      <option value="2">Wilman Frank Huertas Orjuela</option>
                      <option value="3">Elquin David Ortega Useche</option>
                      <option value="4">Marilyn Celine Nieto Morea</option>
                      <option value="5">Martín Plazas Andrade</option>
                    </select>
                  </div>
                </div>
              </div>
              <div class="form-group row justify-content-center">
                <label for="nombre" class="col-sm-4 col-form-label">Fecha cita</label>
                <div class="col-sm-6">
                  <input type="date" class="form-control" id="fecha-cita" required />
                </div>
                <div class="form-group row justify-content-center"><br><br>
                  <label for="nombre" class="col-sm-4 col-form-label"> Hora cita</label>
                  <div class="col-sm-6"><br>
                    <input type="time" class="form-control" id="hora-cita" required />
                  </div>
                </div> <br><br>
                <div class="row">
                  <div class="col-sm-3">
                    <button type="submit" value="crear-cita" class="btn btn-lg btn-primary">Crear </button>
                  </div>
                  <div class="col-sm-3">
                    <button type="submit" value="buscar-cita" class="btn btn-lg btn-primary">Buscar</button>
                  </div>
                  <div class="col-sm-3">
                    <button type="submit" value="editar-cita" class="btn btn-lg btn-primary">Editar</button>
                  </div>
                  <div class="col-sm-3">
                    <button type="submit" value="eliminar-cita" class="btn btn-lg btn-danger">Eliminar</button>
                  </div>
                </div>  
              </div>  
            </div>
          </form>
        </div>
      </div>
